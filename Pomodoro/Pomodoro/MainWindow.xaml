<Window x:Class="Pomodoro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pomodoro"
        mc:Ignorable="d"
        Title="Pomodoro" Height="450" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FDFFFC">

    <!-- RECURSOS Y ANIMACIONES -->
    <Window.Resources>

        <!-- Estilos de botones -->
        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Iniciar -->
        <Style x:Key="StartButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#2EC4B6"/>
            <Setter Property="BorderBrush" Value="#2EC4B6"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#44F5E5"/>
                    <Setter Property="BorderBrush" Value="#44F5E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Pausar -->
        <Style x:Key="PauseButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#FF9F1C"/>
            <Setter Property="BorderBrush" Value="#FF9F1C"/>
            <Setter Property="Foreground" Value="Black"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFD15C"/>
                    <Setter Property="BorderBrush" Value="#FFD15C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Reiniciar -->
        <Style x:Key="ResetButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#E71D36"/>
            <Setter Property="BorderBrush" Value="#E71D36"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4C5A"/>
                    <Setter Property="BorderBrush" Value="#FF4C5A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ANIMACIONES PANEL CONFIG -->
        <Storyboard x:Key="ShowConfigPanelStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.20"/>
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                Duration="0:0:0.20"
                                From="0,36,-200,0"
                                To="0,36,0,0"/>
        </Storyboard>

        <Storyboard x:Key="HideConfigPanelStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="1" To="0" Duration="0:0:0.20"/>
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                Duration="0:0:0.20"
                                From="0,36,0,0"
                                To="0,36,-200,0"/>
        </Storyboard>

        <!-- ANIMACIONES OVERLAY BLUR -->
        <Storyboard x:Key="ShowOverlay">
            <DoubleAnimation Storyboard.TargetName="Overlay"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.25"/>

            <DoubleAnimation Storyboard.TargetName="OverlayBlur"
                             Storyboard.TargetProperty="Radius"
                             From="0" To="8" Duration="0:0:0.25"/>
        </Storyboard>

        <Storyboard x:Key="HideOverlay">
            <DoubleAnimation Storyboard.TargetName="Overlay"
                             Storyboard.TargetProperty="Opacity"
                             From="1" To="0" Duration="0:0:0.20"/>

            <DoubleAnimation Storyboard.TargetName="OverlayBlur"
                             Storyboard.TargetProperty="Radius"
                             From="8" To="0" Duration="0:0:0.20"/>
        </Storyboard>

    </Window.Resources>

    <Grid>

        <!-- CARD PRINCIPAL -->
        <Border CornerRadius="15" Padding="24" Width="380" Height="370"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border.Background>
                <SolidColorBrush x:Name="StateBrush" Color="#011627" />
            </Border.Background>

            <Grid>

                <Border x:Name="Overlay"
                        Background="#00000080"
                        Visibility="Collapsed"
                        Opacity="0"
                        Panel.ZIndex="99"
                        Grid.RowSpan="10"
                        MouseDown="Overlay_MouseDown">
                    <Border.Effect>
                        <BlurEffect Radius="0" x:Name="OverlayBlur"/>
                    </Border.Effect>
                </Border>

                <!-- BOTÓN SETTINGS -->
                <Button x:Name="SettingsButton"
                        Content="⚙"
                        Width="28" Height="28"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="#021019"
                        Foreground="#FDFFFC"
                        BorderBrush="#021019"
                        FontWeight="Bold"
                        Click="SettingsButton_Click"
                        Cursor="Hand"/>

                <!-- PANEL CONFIG -->
                <Border x:Name="ConfigPanel"
                        Background="#021019"
                        CornerRadius="10"
                        Padding="12"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Panel.ZIndex="100"
                        Margin="0,36,0,0"
                        Width="200"
                        Opacity="0"
                        Visibility="Collapsed">

                    <StackPanel>
                        <TextBlock Text="Configuración"
                                   Foreground="#FDFFFC"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Margin="0,0,0,10"/>

                        <!-- Tiempos -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <StackPanel Margin="4,0">
                                <TextBlock Text="Trabajo (min)" Foreground="#BBBBCC" FontSize="11" />
                                <TextBox x:Name="WorkMinutesInput" Width="60" Text="25"
                                         HorizontalContentAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Margin="4,0">
                                <TextBlock Text="Descanso (min)" Foreground="#BBBBCC" FontSize="11" />
                                <TextBox x:Name="BreakMinutesInput" Width="60" Text="5"
                                         HorizontalContentAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Descanso largo -->
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
                            <StackPanel Margin="4,0">
                                <TextBlock Text="Cada (pom.)" Foreground="#BBBBCC" FontSize="11"/>
                                <TextBox x:Name="LongBreakIntervalInput" Width="60" Text="4"
                                         HorizontalContentAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Margin="4,0">
                                <TextBlock Text="Desc. largo" Foreground="#BBBBCC" FontSize="11"/>
                                <TextBox x:Name="LongBreakMinutesInput" Width="60" Text="15"
                                         HorizontalContentAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- CONTENIDO PRINCIPAL -->
                <StackPanel x:Name="MainContent">

                    <TextBlock Text="Pomodoro"
                               FontSize="29"
                               FontWeight="Bold"
                               Foreground="White" Width="147"/>

                    <TextBlock x:Name="PhaseText"
                               Text="Listo para empezar"
                               FontSize="14"
                               Foreground="#BBBBCC"
                               Margin="0,10,0,16" />

                    <TextBlock x:Name="TimeText"
                               Text="--:--"
                               FontSize="48"
                               FontWeight="SemiBold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <ProgressBar x:Name="Progress"
                                 Height="8"
                                 Minimum="0"
                                 Maximum="1"
                                 Value="0"
                                 Margin="0,0,0,16"
                                 Background="#3A3A4C"
                                 BorderThickness="0"/>

                    <TextBlock x:Name="PomodoroCountText"
                               Text="Completed pomodoros: 0"
                               FontSize="12"
                               Foreground="#8888AA"
                               Margin="0,0,0,12"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,8,0,0">
                        <Button Content="Iniciar" Click="Start_Click"
                                Style="{StaticResource StartButtonStyle}"/>
                        <Button Content="Pausar" Click="Pause_Click"
                                Style="{StaticResource PauseButtonStyle}"/>
                        <Button Content="Reiniciar" Click="Reset_Click"
                                Style="{StaticResource ResetButtonStyle}"/>
                    </StackPanel>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>
